/**
 * Validate the breadcrumb_multichoice config form values
 */
function breadcrumb_multichoice_config_validate($form, $form_state) {
  if (!_quiz_is_int($form_state['values']['breadcrumb_multichoice_def_num_of_alts'], 2, 50)) {
    form_set_error('breadcrumb_multichoice_def_num_of_alts', t('The default number of alternatives must be between 2 and 50'));
  }
}

