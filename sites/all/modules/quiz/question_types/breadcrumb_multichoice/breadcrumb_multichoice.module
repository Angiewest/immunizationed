/**
 * Implements hook_config().
 */
function breadcrumb_multichoice_config() {
  $form['breadcrumb_multichoice_def_num_of_alts'] = array(
    '#type' => 'textfield',
    '#title' => t('Default number of alternatives'),
    '#default_value' => variable_get('breadcrumb_multichoice_def_num_of_alts', 2),
  );
  $form['breadcrumb_multichoice_def_scoring'] = array(
    '#type' => 'radios',
    '#title' => t('Default scoring method'),
    '#description' => t('Choose the default scoring method for questions with multiple correct answers.'),
    '#options' => array(
      0 => t('Give minus one point for incorrect answers'),
      1 => t("Give one point for each incorrect option that haven't been chosen"),
    ),
    '#default_value' => variable_get('breadcrumb_multichoice_def_scoring', 0),
